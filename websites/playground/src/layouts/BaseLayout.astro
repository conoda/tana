---
interface Props {
  title?: string;
}

const { title = 'Tana Playground' } = Astro.props;
import '../styles/global.css' 
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="m-0 p-0 h-screen overflow-hidden bg-gray-900">
    <slot />
  </body>
</html>
